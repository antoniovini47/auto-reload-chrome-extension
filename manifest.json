{
  "name": "Auto Reloader",
  "version": "1.0.0",
  "description": "Automaticlly reloads pages",
  "manifest_version": 3,
  "author": "Rotec",
  "action": {
    "default_popup": "index.html",
    "default_title": "Auto Reloader",
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "permissions": ["tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
